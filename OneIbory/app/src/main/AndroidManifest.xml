<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.insys.oneibory">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.insys.oneibory.app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppCompatTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.insys.oneibory.Login.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan"></activity>

       <!-- <activity
            android:name=".activities.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:theme="@style/AppCompatTheme"></activity>-->

        <activity
            android:name="com.example.insys.oneibory.Search.SearchActivity"
            android:theme="@style/AppCompatTheme"
            android:windowSoftInputMode="stateAlwaysVisible">

        </activity>

        <activity
            android:name=".activities.WebView"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:theme="@style/AppCompatTheme"></activity>

        <activity android:name=".activities.ActivityDynamicTabs"
           android:theme="@style/Theme.AppCompat.Light.NoActionBar" ></activity>

    </application>

</manifest>
